<UserControl x:Class="PatchReviewer.TitledEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500">

    <DockPanel>
        <Border DockPanel.Dock="Top" BorderBrush="Gainsboro" BorderThickness="1">
            <Label Name="title" Background="#FF30B8E0" Padding="3">
                Title
            </Label>
        </Border>
        <avalonedit:TextEditor
            Name="editor"
            FontFamily="Consolas" FontSize="10pt" HorizontalScrollBarVisibility="Auto">
            Welcome to AvalonEdit!
        </avalonedit:TextEditor>
    </DockPanel>
</UserControl>
